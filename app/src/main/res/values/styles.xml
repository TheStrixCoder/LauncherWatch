<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ConfirmationActivity">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:activityOpenEnterAnimation">@null</item>
    </style>
    <style name="SinglePageNavDrawerIconStyle">
        <item name="android:padding">@dimen/nav_drawer_single_page_icon_padding</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:layout_width">@dimen/nav_drawer_single_page_icon_size</item>
        <item name="android:layout_height">@dimen/nav_drawer_single_page_icon_size</item>
        <item name="circle_color">#33ffffff</item>
        <item name="circle_radius">@dimen/nav_drawer_single_page_circle_radius</item>
    </style>
    <style name="SinglePageNavDrawerTextStyle">
        <item name="android:textSize">@dimen/nav_drawer_text_size</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="layout_marginTopPercent">@fraction/nav_drawer_text_margin</item>
        <item name="layout_marginStartPercent">@fraction/nav_drawer_text_margin</item>
        <item name="layout_marginEndPercent">@fraction/nav_drawer_text_margin</item>
    </style>
    <style name="AppBaseTheme">
    </style>
    <style name="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="NotificationButtonWithOutBG">
        <item name="android:textSize">28dp</item>
        <item name="android:textColor">#ff252525</item>
        <item name="background">@android:color/transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>
    <style name="NotificationButton">
        <item name="background">@drawable/notification_button</item>
        <item name="android:layout_height">70dp</item>
    </style>
    <style name="NotificationRoundButton">
        <item name="background">@drawable/notification_button_round</item>
    </style>
    <style name="NotificationEventTime">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#ff56a9ea</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="chooseClockview">
        <item name="android:windowSwipeToDismiss">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="OnlineFontPreview">
        <item name="android:windowBackground">@drawable/alert_dialog_bg4</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="loading_large">
        <item name="android:maxWidth">160dp</item>
        <item name="android:maxHeight">160dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/spinner</item>
        <item name="android:indeterminateDuration">1000</item>
        <item name="android:minWidth">160dp</item>
        <item name="android:minHeight">160dp</item>
    </style>
    <style name="loading_small">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/spinner_small</item>
        <item name="android:indeterminateDuration">2000</item>
    </style>
    <style name="loading_normal">
        <item name="android:maxWidth">30dp</item>
        <item name="android:maxHeight">30dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/spinner_normal</item>
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:minWidth">30dp</item>
        <item name="android:minHeight">30dp</item>
    </style>
    <style name="quicksettings_button_style">
        <item name="background">@drawable/music_key</item>
    </style>
</resources>

                <ImageButton android:id="@android:id/button1" android:background="@drawable/accept_deny_dialog_positive_bg" android:visibility="gone" android:layout_width="@dimen/diag_button_size" android:layout_height="@dimen/diag_button_size" app:srcCompat="@drawable/ic_cc_checkmark" android:contentDescription="@string/generic_yes"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</ScrollView>
